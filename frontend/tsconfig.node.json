{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    "types": ["node"],
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": true,
    "strict": true
  },
  "include": ["vite.config.ts"]
}
